<div class="tr">
	<ol class="breadcrumb">
	  <li><a href="/">Login</a></li>
	  <li class="active">Register</li>
	</ol>
	<form id="register-form" action="/api/register" method="post">
		<div class="form-group">
			<label>First Name</label>
			<input type="text" class="form-control" id="firstname" name="firstname">
			<span class="help-block hide">This field is required.</span>
		</div>
		<div class="form-group">
			<label>Last Name</label>
			<input type="text" class="form-control" id="lastname" name="lastname">
			<span class="help-block hide">This field is required.</span>
		</div>
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" id="username" name="username">
			<span class="help-block hide">This field is required.</span>
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" id="passw" name="passw">
			<span class="help-block hide">This field is required.</span>
		</div>
		<div class="form-group">
			<label>Confirm Password</label>
			<input type="password" class="form-control" id="confirm-passw" name="confirm-passw">
			<span class="help-block hide">This field is required.</span>
		</div>
		<button id="register" type="submit" class="btn btn-lg btn-block btn-primary">Register</button>
	</form>
</div> <!-- /#login -->
